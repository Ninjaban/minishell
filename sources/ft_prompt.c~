#include "libft.h"
#include "shell.h"
#include "error.h"

void		ft_path(char *str, char **env)
{
	if (str && env)
		return ;
}

void		ft_nbcmd(char *str, size_t nbcmd)
{
	if (str && nbcmd)
		return ;
}

void		ft_color(char *str)
{
	char	*tmp;
	size_t	n;

	tmp = NULL;
	if (*str == '\033')
	{
		if (str)
			tmp = ft_strstr(str, "m");
		if (tmp)
		{
			n = tmp - str;
			write(1, str, n);
			while (str < tmp)
				str++;
		}
	}
}

void		ft_affprompt(size_t nbcmd, char **env)
{
	char	*str;

	str = ft_strdup(PROMPT);
	if (str)
	{
		while (*str)
		{
			ft_color(str);
			ft_nbcmd(str, nbcmd);
			ft_path(str++, env);
		}
		//free(str);
	}
}

